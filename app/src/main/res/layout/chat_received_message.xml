<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/chat_item_style"
    android:orientation="vertical">

    <include layout="@layout/chat_common_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/chat_common_avatar"/>

        <FrameLayout
            android:id="@+id/message_receive_layout"
            style="@style/chat_recieve_style"
            android:layout_width="wrap_content">

            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/message_receive_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="left|center"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="1dp"
                android:maxWidth="225.0dip"
                android:textColor="@color/c_33"
                android:textSize="15sp" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>